<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default" transaction-type="RESOURCE_LOCAL">
        <class>entity.Aula</class>
        <class>entity.CodPostal</class>
        <class>entity.EstadoAula</class>
        <class>entity.EstadoPagamento</class>
        <class>entity.Funcionario</class>
        <class>entity.LinhaAula</class>
        <class>entity.Modalidade</class>
        <class>entity.ModalidadesPlano</class>
        <class>entity.Plano</class>
        <class>entity.Recibo</class>
        <class>entity.Socio</class>
        <class>entity.TipoFuncionario</class>
        <class>entity.TipoPagamento</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/GinasioDB"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="postgres"/>
            <property name="hibernate.connection.password" value="123456"/>
        </properties>
    </persistence-unit>
</persistence>
